<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jinhx.blog.mapper.bill.BillMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.jinhx.blog.entity.bill.Bill">
        <id column="id" property="billId" />
        <result column="bill_type_id" property="billTypeId" />
        <result column="income_expenditure_type" property="incomeExpenditureType" />
        <result column="amount" property="amount" />
        <result column="date" property="date" />
        <result column="remarks" property="remarks" />
        <result column="creater_id" property="createrId" />
        <result column="updater_id" property="updaterId" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>

    <!-- 查询所有结果列 -->
    <sql id="AllColumn">
       id,bill_type_id,income_expenditure_type,amount,date,remarks,creater_id,updater_id,create_time,update_time
    </sql>

</mapper>
